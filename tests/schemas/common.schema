{
  "title": "common.yaml | Homer Public",
  "type": "object",
  "additionalProperties" : false,
  "properties": {
    "asn": {
      "type": "integer"
    },
    "lvs": {
      "type": "object",
      "additionalProperties" : false,
      "description": "In common as we need the full infra wide list as well.",
      "patternProperties": {
        "^(eqiad|eqord|codfw|eqdfw|esams|ulsfo|eqsin|drmrs|magru)$": {
          "type": "array",
          "prefixItems": [
            {
               "type": "string",
               "format": "ip_network",
               "minProperties": 0
            }
          ]
        }
      },
      "required": [
        "eqiad",
        "eqord",
        "codfw",
        "eqdfw",
        "esams",
        "ulsfo",
        "eqsin",
        "drmrs",
        "magru"
      ]
    },
    "anycast_prefixes": {
      "type": "array",
      "prefixItems": [
        {
          "type": "string",
          "format": "ip_network",
          "minProperties": 0
        }
      ]
    },
    "users": {
      "type": "array",
      "minProperties": 1,
      "prefixItems": [
        {
          "type": "object",
          "additionalProperties" : false,
          "properties": {
            "name": {
              "type": "string"
            },
            "uid": {
              "type": "integer"
            },
            "class": {
              "type": "string",
              "enum": [
                "super-user",
                "operations",
                "rancid",
                "read-only"
              ]
            },
            "sshkeys": {
              "type": "array",
              "minProperties": 1,
              "prefixItems": [
                {
                  "type": "string"
                }
              ]
            }
          },
          "required": [
            "name",
            "uid",
            "class",
            "sshkeys"
          ]
        }
      ]
    },
    "ospf": {
      "type": "object",
      "additionalProperties" : false,
      "properties": {
        "p2p": {
          "type": "array",
          "prefixItems": [
            {
              "type": "object",
              "additionalProperties" : false,
              "minProperties": 2,
              "properties": {
                "metric": {
                  "type": "integer"
                },
                "bfd": {
                  "type": "boolean"
                }
              },
              "patternProperties": {
                "^.+$": {
                  "type": "string"
                }
              }
            }
          ]
        },
        "stub": {
          "type": "object",
          "additionalProperties" : false,
          "patternProperties": {
            "^.+$": {
              "type": "array",
              "minProperties": 1,
              "prefixItems": [
                {
                  "type": "string"
                }
              ]
            }
          }
        }
      },
      "required": [
        "p2p",
        "stub"
      ]
    },
    "juniper_protocols": {
      "type": "array",
      "minProperties": 1,
      "prefixItems": [
        {
          "type": "string"
        }
      ]
    },
    "juniper_services": {
      "type": "array",
      "minProperties": 1,
      "prefixItems": [
        {
          "type": "string"
        }
      ]
    },
    "ntp_servers": {
      "type": "array",
      "prefixItems": [
        {
          "type": "string",
          "format": "ipv4"
        }
      ]
    },
    "transit_providers": {
      "type": "object",
      "additionalProperties" : false,
      "minProperties": 1,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "description": "Provider name",
          "additionalProperties" : false,
          "properties": {
            "AS": {
              "type": "integer",
              "description": "Peer AS number"
            }
          },
          "patternProperties": {
            "^(BFD|flowspec|import_policy|export_policy)$": {
              "type": "boolean"
            }
          },
          "required": [
            "AS"
          ]
        }
      }
    },
    "asns_mapping": {
      "type": "object",
      "additionalProperties" : false,
      "patternProperties": {
        "^(k8s|k8s-(stage|mlserve|mlstaging|dse|aux)|frack)$": {
          "type": "object",
          "additionalProperties" : false,
          "properties": {
            "eqiad": {
              "type": "integer"
            },
            "codfw": {
              "type": "integer"
            }
          },
          "anyOf": [
            { "required": ["eqiad"] } ,
            { "required": ["codfw"] }
          ]
        }
      },
      "required": [
        "k8s",
        "k8s-stage",
        "frack"
      ]
    },
    "syslog_servers": {
      "type": "object",
      "description": "Dict of syslog server fqdn's, each element is a dict with config attributes for that server",
      "additionalProperties" : false,
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"]
        }
      }
    },
    "users_passwords": {
      "type": "object",
      "description": "Define Linux style hashed passwords for users who need them set. Set as a different key to live in homer-private.",
      "additionalProperties" : false,
      "patternProperties": {
        "^.+$": {
              "type": "string"
        }
      }
    }
  },
  "required": [
    "asn",
    "lvs",
    "users",
    "ospf",
    "juniper_protocols",
    "juniper_services",
    "ntp_servers",
    "transit_providers",
    "asns_mapping",
    "syslog_servers"
  ]
}
